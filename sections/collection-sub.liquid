{%- endcomment -%}
{% comment %} {%- assign sub_collections = collection.metafields.custom.subcollections.value -%}

{%- if sub_collections != blank -%}
  {%- assign sub_collection_count = sub_collections.count | at_most: section.settings.limit -%}
  {%- assign grid_columns = sub_collection_count -%}
  
  {% case sub_collection_count %}
    {% when 5, 6 %}
      {%- assign grid_columns = 3 -%}
  {% endcase %}

<section class="{{ section.settings.color_bg }}"
  data-section-id="{{ section.id }}"
  data-section-type="hero"
  style="--PT: {{ section.settings.padding_top }}px; --PB: {{ section.settings.padding_bottom }}px;">
    <div class="{{ section.settings.width }} section-padding">
      <div class="subcollections subcollections__grid--{{ sub_collection_count }}">
        <div class="subcollections__inner"
          data-custom-scrollbar-items
          style="--grid-small-items: {{ section.settings.grid_mobile }}; display: flex; justify-content: center; gap: 20px;">
          
          {% for sub_collection in sub_collections limit: section.settings.limit %}
            <div class="section--image subcollection__item fade-in-child {{ section.settings.text_color }}" style="flex: 0 0 auto; width: 150px; text-align: center;">
              <a class="subcollection__link" href="{{ sub_collection.url }}" style="display: block;">
                
                {%- comment -%} Circular Image Logic {%- endcomment -%}
                <div class="subcollection__image" style="width: 120px; height: 120px; border-radius: 50%; overflow: hidden; margin: 0 auto; border: 1px solid #eee;">
                  {%- assign image = sub_collection.image -%}
                  {%- if section.settings.select_image == 'product' or image == blank -%}
                    {%- assign image = sub_collection.products.first.featured_media.preview_image -%}
                  {%- endif -%}

                  {%- render 'image',
                    cover: true,
                    img_object: image,
                    wh_ratio: 1.0,
                    bg_position: section.settings.bg_position,
                    placeholder: 'collection-1'
                  -%}
                </div>
                
                <div class="image-overlay" style="border-radius: 50%; --bg:{{ section.settings.overlay_color }}; opacity:{{ section.settings.overlay_opacity | times: 0.01 }};"></div>
                
                {%- comment -%} Title below the circle {%- endcomment -%}
                <div class="hero__content__wrapper align--bottom-center" style="position: relative; margin-top: 10px;">
                  <p class="subcollection__title" style="color: #000; text-shadow: none;">{{ sub_collection.title }}</p>
                </div>
              </a>
            </div>
          {% endfor %}
        </div>

        <div class="custom-scrollbar small-down--show" data-custom-scrollbar>
          <div class="custom-scrollbar__track" data-custom-scrollbar-track></div>
        </div>
      </div>
    </div>
</section>
{%- endif -%}

