  <script>
    (function() {
      const scope = document.querySelector('[data-item-id="{{ product.id }}"]');
      if (!scope) return;

      scope.addEventListener('click', function(e) {
        const sizeBtn = e.target.closest('.js-direct-add-size');
        // Theme's Bag button usually has this class or data-variant-id
        const bagBtn = e.target.closest('.quick-action-button') || e.target.closest('[data-variant-id]');
        
        // 1. If size is clicked: Highlight it and UPDATE THE BAG BUTTON'S ID
        if (sizeBtn) {
          e.preventDefault();
          e.stopPropagation();

          const vId = sizeBtn.getAttribute('data-variant-id');
          
          // Visual selection
          scope.querySelectorAll('.js-direct-add-size').forEach(b => {
            b.style.backgroundColor = "#fff";
            b.style.color = "#000";
          });
          sizeBtn.style.backgroundColor = "#000";
          sizeBtn.style.color = "#fff";

          // UPDATE THE THEME'S BAG BUTTON ID
          // We search for anything that might be the bag button and force the new ID on it
          const realBag = scope.querySelector('.quick-action-button') || scope.querySelector('[data-variant-id]:not(.js-direct-add-size)');
          if (realBag) {
            realBag.setAttribute('data-variant-id', vId);
            // Some themes use href or a hidden input
            const bagLink = realBag.querySelector('a');
            if (bagLink) bagLink.setAttribute('href', '/cart/add?id=' + vId);
          }
        }

        // 2. Handle the "Add to Cart" AJAX call for both buttons
        if (sizeBtn || bagBtn) {
          e.preventDefault();
          e.stopPropagation();

          const target = sizeBtn || bagBtn;
          const vId = target.getAttribute('data-variant-id');
          
          if (target.classList.contains('is-loading')) return;
          target.classList.add('is-loading');

          fetch('/cart/add.js', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({ id: Number(vId), quantity: 1 })
          })
          .then(res => res.json())
          .then(data => {
            // TRIGGERS THE TOP BAR
            document.dispatchEvent(new CustomEvent('ajaxProduct:added', { detail: { product: data } }));
            document.dispatchEvent(new CustomEvent('cart:refresh', { bubbles: true }));
            
            // If your theme uses theme-specific events:
            document.dispatchEvent(new CustomEvent('theme:cart:add', { detail: { product: data } }));
          })
          .catch(err => console.error(err))
          .finally(() => {
            target.classList.remove('is-loading');
          });
        }
      }, true); // Use capture phase to override theme scripts
    })();
  </script>
