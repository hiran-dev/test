  .active__filters__clear_all {
    margin-left: auto; /* Pushes to the right */
    background: #000 !important;
    color: #fff !important;
    padding: 8px 20px;
    border-radius: 50px;
    text-transform: uppercase;
    font-weight: bold;
    font-size: 12px;
    text-decoration: none;
    transition: opacity 0.2s;
  }

  .active__filters__clear_all:hover {
    opacity: 0.8;
