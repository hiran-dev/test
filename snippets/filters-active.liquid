  .active__filters__remove {
    background: #f1f1f1;
    padding: 5px 12px;
    border-radius: 4px;
    text-decoration: none;
    color: #000;
    font-size: 13px;
    display: flex;
    align-items: center;
    gap: 5px;
  }

