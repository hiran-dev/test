 {%- comment -%} 
  Updated to pull the List of Collections from your new metafield: custom.sub_collection
{%- endcomment -%}
{%- assign sub_collections = collection.metafields.custom.sub_collection.value -%}

{%- if sub_collections != blank -%}
<section class="{{ section.settings.color_bg }}"
  style="padding-top: {{ section.settings.padding_top }}px; padding-bottom: {{ section.settings.padding_bottom }}px;">
    
    <div class="{{ section.settings.width }}">
      <div class="subcollections">
        <div class="subcollections__inner"
          style="display: flex; justify-content: center; gap: 20px; flex-wrap: nowrap; overflow-x: auto; padding: 10px 0; scrollbar-width: none; -webkit-overflow-scrolling: touch;">
          
          {%- comment -%} Loop through the collections you manually picked in the admin {%- endcomment -%}
          {% for sub_col in sub_collections limit: section.settings.limit %}
              
              <div class="subcollection__item" style="flex: 0 0 auto; width: 140px; text-align: center;">
                <a href="{{ sub_col.url }}" style="text-decoration: none; display: block;">
                  
                  <div class="circle-img-wrap" style="width: 110px; height: 110px; border-radius: 50%; overflow: hidden; margin: 0 auto 12px; border: 1px solid #e1e1e1; display: flex; align-items: center; justify-content: center; background: #fff;">
                    {%- assign image = sub_col.image -%}
                    {%- if section.settings.select_image == 'product' or image == blank -%}
                      {%- assign image = sub_col.products.first.featured_media.preview_image -%}
                    {%- endif -%}

                    {%- if image != blank -%}
                       <img src="{{ image | image_url: width: 300, height: 300, crop: 'center' }}" 
                            alt="{{ sub_col.title | escape }}" 
                            style="width: 100%; height: 100%; object-fit: cover;"
                            loading="lazy">
                    {%- else -%}
                      {{ 'collection-1' | placeholder_svg_tag: 'placeholder-svg' }}
                    {%- endif -%}
                  </div>
                  
                  <p style="margin: 0; font-size: 13px; color: #333; font-weight: 500; text-transform: capitalize;">{{ sub_col.title }}</p>
                </a>
              </div>
          {% endfor %}
        </div>
      </div>
    </div>
</section>
{%- endif -%}

{% schema %}
{
    "name": "Subcollections Meta",
    "settings": [
        {
            "type": "paragraph",
            "content": "Uses 'Sub-Collection' metafield to show circles."
        },
        {
            "type": "range",
            "id": "limit",
            "min": 1,
            "max": 12,
            "step": 1,
            "label": "Limit",
            "default": 6
        },
        {
            "type": "select",
            "id": "select_image",
            "label": "Image source",
            "default": "collection",
            "options": [
                { "value": "collection", "label": "Collection image" },
                { "value": "product", "label": "First product" }
            ]
        },
        {
            "type": "select",
            "id": "width",
            "label": "Width",
            "default": "wrapper",
            "options": [
                { "value": "wrapper--none", "label": "Full" },
                { "value": "wrapper", "label": "Page" }
            ]
        },
        {
            "type": "range",
            "id": "padding_top",
            "min": 0,
            "max": 100,
            "step": 2,
            "unit": "px",
            "label": "Padding Top",
            "default": 20
        },
        {
            "type": "range",
            "id": "padding_bottom",
            "min": 0,
            "max": 100,
            "step": 2,
            "unit": "px",
            "label": "Padding Bottom",
            "default": 20
        }
    ]
}
{% endschema %}