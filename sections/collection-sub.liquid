{%- assign sub_collections = section.settings.subcollections -%}

{%- if sub_collections != blank -%}
<section class="subcollection-circles-section" 
         style="padding-top: {{ section.settings.padding_top }}px; padding-bottom: {{ section.settings.padding_bottom }}px; background-color: transparent;">
  <div class="{{ section.settings.width }}">
    
    <div class="circle-nav-container">
      {% for sub in sub_collections limit: section.settings.limit %}
        <div class="circle-nav-item">
          <a href="{{ sub.url }}" class="circle-nav-link">
            
            <div class="circle-image-container">
              {%- assign image = sub.image -%}
              {%- if section.settings.select_image == 'product' or image == blank -%}
                {%- assign image = sub.products.first.featured_media.preview_image -%}
              {%- endif -%}

              {%- if image != blank -%}
                {%- comment -%} Removed 'crop: center' to prevent aggressive cropping at the source {%- endcomment -%}
                <img src="{{ image | image_url: width: 250, height: 250 }}" 
                     alt="{{ sub.title }}" 
                     class="circle-img"
                     loading="lazy">
              {%- else -%}
                {{ 'collection-1' | placeholder_svg_tag: 'placeholder-svg' }}
              {%- endif -%}
            </div>

            <p class="circle-title">{{ sub.title }}</p>
          </a>
        </div>
      {% endfor %}
    </div>

  </div>
</section>

<style>
  .circle-nav-container {
    display: flex;
    justify-content: center;
    gap: 20px;
    flex-wrap: nowrap;
    overflow-x: auto;
    -webkit-overflow-scrolling: touch;
    padding: 10px 0;
    scrollbar-width: none; 
  }
  .circle-nav-container::-webkit-scrollbar { display: none; }

  .circle-nav-item {
    flex: 0 0 auto;
    width: 110px; /* Reduced width */
    text-align: center;
  }

  .circle-nav-link {
    text-decoration: none;
    display: block;
  }

  .circle-image-container {
    width: 95px; /* Smaller circles */
    height: 95px;
    margin: 0 auto 10px;
    border-radius: 50%;
    overflow: hidden;
    border: 1px solid #f0f0f0;
    transition: transform 0.3s ease;
    background: #fff;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .circle-nav-item:hover .circle-image-container {
    transform: scale(1.05);
    border-color: #d1d1d1;
  }

  .circle-img {
    width: 100%;
    height: 100%;
    /* 'cover' fills the circle, 'contain' shows the whole photo with white space. 
       We use cover here but with smaller dimensions to avoid the 'zoomed' look. */
    object-fit: contain; 
    object-position: center top; /* Helps keep faces/heads in frame for fashion */
    display: block;
  }

  .circle-title {
    margin: 0;
    font-size: 12px; /* Slightly smaller text */
    color: #1a1a1a;
    font-weight: 500;
    text-transform: uppercase; /* Standard for high-end fashion nav */
    letter-spacing: 0.05em;
  }

  @media only screen and (max-width: 767px) {
    .circle-nav-container {
      justify-content: flex-start;
      padding-left: 15px;
      gap: 12px;
    }
    .circle-nav-item {
      width: 85px;
    }
    .circle-image-container {
      width: 75px;
      height: 75px;
    }
    .circle-title {
      font-size: 10px;
    }
  }
</style>
{%- endif -%}

