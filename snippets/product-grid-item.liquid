    .custom-modal-overlay { position: fixed; inset: 0; background: rgba(0,0,0,0.8); z-index: 2147483647; display: none; align-items: center; justify-content: center; padding: 20px; }
    .custom-modal-content { background: #fff; width: 100%; max-width: 500px; padding: 30px; position: relative; border-radius: 4px; color: #000; }
    .custom-modal-grid { display: grid; grid-template-columns: 1fr 1fr; gap: 20px; }
    .custom-modal-close { position: absolute; top: 5px; right: 10px; font-size: 30px; border: none; background: none; cursor: pointer; color: #000; }
    .modal-label { font-size: 10px; font-weight: bold; margin: 15px 0 10px; letter-spacing: 1px; }
    .modal-size-grid { display: flex; flex-wrap: wrap; gap: 8px; }
    .size-btn { border: 1px solid #ddd; background: #fff; padding: 10px 15px; cursor: pointer; font-size: 13px; flex: 1 1 30%; }
    .size-btn:hover:not([disabled]) { border-color: #000; background: #000; color: #fff; }
    .size-btn[disabled] { opacity: 0.3; cursor: not-allowed; text-decoration: line-through; }
    @media (max-width: 600px) { .custom-modal-grid { grid-template-columns: 1fr; } .custom-modal-content { padding: 15px; } }
  </style>

  <script>
    (function() {
      const pId = "{{ product.id }}";
      const container = document.querySelector(`[data-item-id="${pId}"]`);
      const modal = container.querySelector(`.js-custom-modal-${pId}`);

      // 1. INTERCEPT THE CLICK IN THE "CAPTURE" PHASE
      // This stops the theme's side drawer script before it even knows you clicked.
      container.addEventListener('click', function(e) {
        // Targets the theme's "Bag" icon or "Add" buttons
        const isTrigger = e.target.closest('[data-instant-add], .product-grid-item__btn, .quick-add, .js-quick-add');
        
        if (isTrigger) {
          e.preventDefault();
          e.stopPropagation();
          e.stopImmediatePropagation(); // KILLS THE DRAWER SCRIPT
          
          modal.style.display = 'flex';
          document.body.style.overflow = 'hidden';
        }
      }, true); // <--- TRUE is the secret sauce for Capture Phase

      // 2. CLOSE MODAL
      modal.addEventListener('click', function(e) {
        if (e.target === modal || e.target.classList.contains('js-close-modal')) {
          modal.style.display = 'none';
          document.body.style.overflow = '';
        }
      });

      // 3. ADD TO CART FROM MODAL
      modal.querySelectorAll('.js-modal-add-btn').forEach(btn => {
        btn.addEventListener('click', function() {
          const vId = this.dataset.vid;
          this.innerText = 'ADDING...';
          this.style.pointerEvents = 'none';

          fetch('/cart/add.js', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({ id: Number(vId), quantity: 1 })
          })
          .then(() => { window.location.href = '/cart'; })
          .catch(() => { this.innerText = 'ERROR'; this.style.pointerEvents = 'auto'; });
        });
      });
    })();
  </script>
