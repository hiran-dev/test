<section class="{{ section.settings.color_bg }}"
  style="padding-top: {{ section.settings.padding_top }}px; padding-bottom: {{ section.settings.padding_bottom }}px;">
    
    <div class="{{ section.settings.width }}">
      <div class="subcollections">
        {%- comment -%} Standard Flexbox wrapper for scannable circles {%- endcomment -%}
        <div class="subcollections__inner"
          style="display: flex; justify-content: center; gap: 20px; flex-wrap: nowrap; overflow-x: auto; padding: 10px 0; scrollbar-width: none; -webkit-overflow-scrolling: touch;">
          
          {% for link in sub_menu.links limit: section.settings.limit %}
            
            {%- assign link_title_downcase = link.title | downcase -%}
            {%- if link_title_downcase contains 'view all' -%}{% continue %}{%- endif -%}

            {%- if link.type == 'collection_link' -%}
              {%- assign sub_col = link.object -%}
              
              <div class="subcollection__item" style="flex: 0 0 auto; width: 140px; text-align: center;">
                <a href="{{ sub_col.url }}" style="text-decoration: none; display: block;">
                  
                  <div class="circle-img-wrap" style="width: 110px; height: 110px; border-radius: 50%; overflow: hidden; margin: 0 auto 12px; border: 1px solid #e1e1e1; display: flex; align-items: center; justify-content: center; background: #fff;">
                    {%- assign image = sub_col.image -%}
                    {%- if section.settings.select_image == 'product' or image == blank -%}
                      {%- assign image = sub_col.products.first.featured_media.preview_image -%}
                    {%- endif -%}

                    {%- if image != blank -%}
                       <img src="{{ image | image_url: width: 300, height: 300, crop: 'center' }}" 
                            alt="{{ sub_col.title }}" 
                            style="width: 100%; height: 100%; object-fit: cover;"
                            loading="lazy">
                    {%- else -%}
                      {{ 'collection-1' | placeholder_svg_tag: 'placeholder-svg' }}
                    {%- endif -%}
                  </div>
                  
                  <p style="margin: 0; font-size: 13px; color: #333; font-weight: 500; text-transform: capitalize;">{{ link.title }}</p>
                </a>
              </div>
            {%- endif -%}
          {% endfor %}
        </div>
      </div>
    </div>
</section>
{%- endif -%}

