          {% unless printed_sizes contains size_key %}
            <button 
              type="button" 
              class="js-direct-add-size" 
              data-variant-id="{{ variant.id }}"
              style="border: 1px solid #000; padding: 4px 8px; font-size: 11px; background: #fff; cursor: pointer; text-transform: uppercase; {% unless variant.available %}opacity: 0.3; cursor: not-allowed; text-decoration: line-through;{% endunless %}"
              {% unless variant.available %}disabled{% endunless %}
            >
              {{ size_value }}
